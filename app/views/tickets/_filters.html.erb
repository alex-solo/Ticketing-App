<%= form_tag tickets_path, method: 'get', enforce_utf8: false do %>
  <div class="control-group">
    Show tickets from
    <%= select_tag :project, options_from_collection_for_select(Project.all, :id, :name, params[:project]), include_blank: "All Projects" %> 
    
    with status
    <%= select_tag :status, options_for_select(Tag.STATUSES, params[:status]), :include_blank => "Any Status" %>
    
    tagged
    <%= select_tag :tag, options_from_collection_for_select(alphabetize(Tag.all), :id, :name, params[:tag]), include_blank: "-" %>
  </div>
  <%= submit_tag 'Filter Tickets', class: 'btn' %>
  <%= link_to 'Clear', tickets_path, class: 'btn btn-primary' %>
<% end %>