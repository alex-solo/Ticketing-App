<%= render 'shared/content_title', title: "Projects" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Open Tickets</th>
      <th>Total Tickets</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <h2><%= link_to project.name, project_path(project) %></h2>
          <p><%= project.description %></p>  
        </td>
        <td><%= project.open_tickets.size %></td>
        <td><%= project.tickets.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "New Project", new_project_path, class: 'btn btn-success' %>
</div>